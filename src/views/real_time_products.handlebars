<div>
  <div>
    <h3>Products</h3>
  </div>
  <div id="productList"></div>
  <div>
    <table style="width:70%; background-color: #555555; font-size: 25px;">
      <tr style="background-color: #000000;">
        <td><b>id</b></td>
        <td><b>title</b></td>
        <td><b>description</b></td>
        <td><b>code</b></td>
        <td><b>price</b></td>
        <td><b>status</b></td>
        <td><b>stock</b></td>
        <td><b>category</b></td>
        <td><b>thumbnails</b></td>
        <td><b>AddToCart</b></td>
        <td><b>ShowProduct</b></td>
      </tr>
      {{#each products.docs}}
        <tr>
          <td headers="id">{{_id}}</td>
          <td headers="title">{{title}}</td>
          <td headers="description">{{description}}</td>
          <td headers="code">{{code}}</td>
          <td headers="price">{{price}}</td>
          <td headers="status">{{status}}</td>
          <td headers="stock">{{stock}}</td>
          <td headers="category">{{category}}</td>
          <td headers="thumbnails">{{thumbnails}}</td>
          <td headers="AddToCart"><a href="/api/carts/{{_id}}">Add To Cart</a></td>
          <td headers="ShowProduct"><a href="/product/{{_id}}">Show</a></td>
        </tr> 
      {{/each}}
    </table>
      <div>
    {{#if products.hasPrevPage}}
      <a href="/real-time-products?page={{products.prevPage}}">Prevoius</a>
    {{/if}}
    <span>Page {{products.page}} de {{products.totalPages}}</span>
    {{#if products.hasNextPage}}
      <a href="/real-time-products?page={{products.nextPage}}">Next</a>
    {{/if}}
  </div>
  </div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>